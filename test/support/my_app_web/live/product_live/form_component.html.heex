<div>
  <h2>Modal</h2>

  <.form
    let={f}
    for={:product}
    id="product-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  
    <%= label f, :price %>
    <%= number_input f, :price %>
    <%= error_tag f, :price %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
